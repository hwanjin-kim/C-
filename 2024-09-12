#include <stdio.h>

int main()
{
    int a,b;
    int sell[100];
    int product[100];
    int inventory[100];
    printf("상품의 개수를 입력.");
    scanf("%d",&a);
    
    
    for(int i=0; i<a;i++){
    printf("%d번째 상품 입고 수량을 입력.",i+1);
    scanf("%d",&product[i]);
    }
    printf("\n");
    for(int i=0; i<a;i++){
    printf("%d번째 상품 판매 수량을 입력.",i+1);
    scanf("%d",&sell[i]);
    }
    
    for(int i=0; i<a;i++){
    inventory[i]=product[i]-sell[i];
    }
    printf("\n");
    printf("재고 수량:");
    
    for(int i=0; i<a;i++){
    printf("%d",inventory[i]);
    }
    int sum1=0;
    printf("\n");
    printf("총 판매량:");
    for(int i=0; i<a;i++){
    sum1=sum1+sell[i];
    }
    float sum2=0;
    for(int i=0; i<a;i++){
    sum2=sum2+product[i];
    }
    printf("%d(판매율%.2f%)",sum1,(sum1/sum2)*100);
    printf("\n");
    for(int i=0;i<a;i++){
        if(inventory[i]<3){
        printf("상품ID %d: 재고부족(%d)\n",i+1,inventory[i]);}
    }
    
    
    return 0;
}
